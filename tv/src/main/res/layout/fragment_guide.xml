<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/guide_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_background">

    <TextView
        android:id="@+id/guide_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TV Guide"
        android:textColor="@android:color/white"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"/>

    <TextView
        android:id="@+id/guide_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your complete programming schedule"
        android:textColor="#9AA4B2"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/guide_title"
        app:layout_constraintTop_toBottomOf="@+id/guide_title"
        android:layout_marginTop="6dp"/>

    <TextView
        android:id="@+id/guide_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12:10 PM"
        android:textColor="#C7CDD6"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guide_title"
        android:layout_marginEnd="32dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/time_axis"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:overScrollMode="never"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guide_subtitle"
        android:layout_marginTop="16dp"
        android:layout_marginStart="220dp"
        android:layout_marginEnd="32dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/guide_rows"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:overScrollMode="never"
        app:layout_constraintTop_toBottomOf="@+id/time_axis"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="24dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
